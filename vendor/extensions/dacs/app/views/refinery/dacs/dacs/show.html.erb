<% content_for :body_content_title do %>
  <%= @dac.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @dac.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @dac.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="dacs">
      <% @dacs.each do |dac| %>
        <li>
          <%= link_to dac.name, refinery.dacs_dac_path(dac) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
